<Window x:Class="ChatneGPT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatneGPT"
        mc:Ignorable="d"
        Title="Авторизация" Height="150" Width="400">
    <Grid>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Height="26" Margin="70,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" TextChanged="loginTextBox_TextChanged"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="70,50,0,0" VerticalAlignment="Top" Width="300" Height="26"/>
        <Button x:Name="loginButton" Content="Войти" HorizontalAlignment="Left" Margin="70,90,0,0" VerticalAlignment="Top" Width="130" Click="loginButton_Click" Height="34"/>
        <Button x:Name="registerButton" Content="Регистрация" HorizontalAlignment="Left" Margin="220,90,0,0" VerticalAlignment="Top" Width="150" Click="registerButton_Click" Height="34"/>
    </Grid>
</Window>
